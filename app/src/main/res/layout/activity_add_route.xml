<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRoute"
    android:background="@drawable/gradient_background">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="412dp"
        android:layout_height="45dp"
        android:background="@drawable/header"
        android:elevation="4dp" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="23dp"
        android:layout_height="25dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_arrow"
        android:elevation="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Add New Bus Route"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:translationY="55dp"  />

    <EditText
        android:id="@+id/getDestination"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/input_textbox"
        android:ems="10"
        android:hint="Enter Destination"
        android:inputType="textPersonName"
        android:padding="5sp"
        android:paddingStart="20sp"
        android:textSize="16sp"
        android:translationY="140dp" />

    <Spinner
        android:id="@+id/getTime"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/input_textbox"
        android:ems="10"
        android:padding="5sp"
        android:paddingStart="20sp"
        android:textSize="16sp"
        android:translationY="150dp" />

    <Spinner
        android:id="@+id/getBusDriver"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:background="@drawable/input_textbox"
        android:ems="10"
        android:padding="5sp"
        android:paddingStart="20sp"
        android:textSize="16sp"
        android:translationY="160dp" />

    <Spinner
        android:id="@+id/getBusNumber"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp"
        android:background="@drawable/input_textbox"
        android:ems="10"
        android:padding="5sp"
        android:paddingStart="20sp"
        android:translationY="170dp" />

<!--    <EditText-->
<!--        android:id="@+id/getPrice"-->
<!--        android:layout_width="350dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:background="@drawable/input_textbox"-->
<!--        android:ems="10"-->
<!--        android:hint="Enter Price"-->
<!--        android:inputType="numberDecimal"-->
<!--        android:padding="5sp"-->
