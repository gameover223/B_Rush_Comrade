<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gcash1">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ECECEC"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        app:cardBackgroundColor="#781616">

                        <ImageButton
                            android:id="@+id/backButton4"
                            android:layout_width="58dp"
                            android:layout_height="match_parent"
                            android:background="#781616"
                            android:outlineAmbientShadowColor="@color/black"
                            android:scaleX="1.5"
                            android:scaleY="1.5"
                            android:visibility="visible"
                            app:srcCompat="@drawable/abc_vector_test"
                            tools:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#1E6CBD">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="132dp"
                            android:background="#1E6CBD"
                            android:scaleType="fitStart"
                            android:scaleX=".50"
                            android:scaleY=".50"
                            app:srcCompat="@drawable/gcash3" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_outer"
                        android:layout_width="359dp"
                        android:layout_height="484dp"
                        android:layout_gravity="center"
                        android:translationY="-50dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="50dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_inner"
                            android:layout_width="357dp"
                            android:layout_height="438dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            app:cardBackgroundColor="#ECECEC"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/editTextTextPersonName"
                                android:layout_width="115dp"
                                android:layout_height="61dp"
                                android:ems="10"
                                android:gravity="start"
                                android:inputType="textPersonName"
                                android:text="Merchant:"
                                android:textColor="#918888"
                                android:textColorHint="#ECECEC"
                                android:textColorLink="#ECECEC"
                                android:textSize="18sp"
                                android:translationX="30dp"
                                android:translationY="30dp" />

                            <TextView
                                android:id="@+id/editTextTextPersonName2"
                                android:layout_width="115dp"
                                android:layout_height="61dp"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="Amount Due:"
                                android:textColor="#918888"
                                android:textColorHint="#ECECEC"
                                android:textSize="18sp"
                                android:translationX="30dp"
                                android:translationY="60dp" />

                            <TextView
                                android:id="@+id/editTextTextPersonName6"
                                android:layout_width="139dp"
                                android:layout_height="61dp"
                                android:ems="10"
                                android:gravity="start"
                                android:inputType="textPersonName"
                                android:text="Gcash Balance"
                                android:textColor="#918888"
                                android:textColorHint="#ECECEC"
                                android:textSize="18sp"
                                android:translationX="30dp"
                                android:translationY="90dp" />

                            <TextView
                                android:id="@+id/Instruct"
                                android:layout_width="301dp"
                                android:layout_height="97dp"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textPersonName"
                                android:text="Confirm Payment of PHP XXXX"
                                android:textColor="#777373"
                                android:textColorHint="#ECECEC"
                                android:textSize="20sp"
                                android:translationX="40dp"
                                android:translationY="180dp" />


                            <TextView
                                android:id="@+id/editTextNumberDecimal"
                                android:layout_width="131dp"
                                android:layout_height="61dp"
                                android:ems="10"
                                android:gravity="start"
                                android:inputType="numberDecimal"
                                android:text="XXXXX.XXX"
                                android:textColor="#918888"
                                android:textColorHint="#ECECEC"
                                android:textSize="18sp"
                                android:translationX="200dp"
                                android:translationY="30dp" />

                            <TextView
                                android:id="@+id/editTextNumberDecimal2"
                                android:layout_width="131dp"
                                android:layout_height="61dp"
                                android:ems="10"
                                android:inputType="numberDecimal"
                                android:text="PHP XXXX"
                                android:textColor="#4377DD"
                                android:textColorHint="#ECECEC"
                                android:textSize="18sp"
                                android:translationX="200dp"
                                android:translationY="60dp" />

                            <TextView
                                android:id="@+id/editTextNumberDecimal3"
                                android:layout_width="131dp"
                                android:layout_height="61dp"
                                android:ems="10"
                                android:gravity="start"
                                android:inputType="numberDecimal"
                                android:text="PHP XXXX"
                                android:textColor="#918888"
                                android:textColorHint="#ECECEC"
                                android:textColorLink="#ECECEC"
                                android:textSize="18sp"
                                android:translationX="200dp"
                                android:translationY="90dp" />

                            <Button
                                android:id="@+id/Submit4"
                                android:layout_width="289dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gcash_button"
                                android:text="Next"
                                android:textSize="18sp"
                                android:translationX="30dp"
                                android:translationY="350dp"
                                app:backgroundTint="#1E6CBD" />

                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <!-- <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:background="#1E6CBD"
                app:srcCompat="@drawable/gcash3" />
-->
        </LinearLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>